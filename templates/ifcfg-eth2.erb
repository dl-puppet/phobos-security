# Config /etc/sysconfig/network-scripts/ifcfg-eth2:
DEVICE=eth2
TYPE=Ethernet
HOTPLUG=yes
ONBOOT=yes
NM_CONTROLLED=no
HWADDR=<%= scope.lookupvar('::macaddress_eth2') %>
BOOTPROTO=static
PEERDNS=no
IPV6INIT=no
NETWORK=<%= scope.lookupvar('::network_eth2') %>
IPADDR=<%= scope.lookupvar('::ipaddress_eth2') %>
NETMASK=<%= scope.lookupvar('::netmask_eth2') %>
#GATEWAY=10.26.112.1
#BROADCAST=10.26.127.255
DHCPV6C=no
NOZEROCONF=yes
#ETHTOOL_OPTS="autoneg off speed 100 duplex full"
